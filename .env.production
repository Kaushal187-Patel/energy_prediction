# Production Environment Variables
# Copy this file and rename to .env for local development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/energyai
JWT_SECRET=your-super-secret-jwt-key-here

# Email Service (for alerts)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Weather API
WEATHER_API_KEY=your-openweathermap-api-key

# ML Model Configuration
MODEL_RETRAIN_INTERVAL=7
PREDICTION_CONFIDENCE_THRESHOLD=0.8
ANOMALY_DETECTION_SENSITIVITY=2.0

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://kaushal187-patel.github.io/energy_prediction